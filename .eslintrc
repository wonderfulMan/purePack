{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": ["node", "standard"],
    "env": {
      "jest": true
    },
    "globals": {
      "name": "off"
    },
    "rules": {
      "prettier/prettier": "error",
      "indent": ["error", 2, {
        "MemberExpression": "off"
      }],
      "no-shadow": ["error"]
    }
}